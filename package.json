{
  "name": "graphql-extra-scalars",
  "version": "1.0.0",
  "description": "Collection of extra GraphQL scalar types like Email, URL, Password and more",
  "keywords": [
    "GraphQL",
    "GraphQL types",
    "GraphQL scalar types"
  ],
  "author": "Martin Å tekl <martin.stekl@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stekycz/graphql-extra-scalars.git"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "bin/build",
    "lint": "bin/lint || true",
    "typescript": "bin/typescript || true",
    "test": "bin/jest",
    "check-all": "bin/check-all || true",
    "prepare": "bin/build"
  },
  "engines": {
    "node": ">=8.10.0"
  },
  "peerDependencies": {
    "graphql": ">=14.3.1"
  },
  "devDependencies": {
    "@cookielab.io/eslint-config-server": "1.0.0",
    "@types/graphql": "14.2.2",
    "@types/jest": "24.0.15",
    "@types/node": "12.0.10",
    "@typescript-eslint/eslint-plugin": "1.11.0",
    "@typescript-eslint/parser": "1.11.0",
    "eslint": "6.0.0",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-import": "2.17.3",
    "flowgen": "1.9.0",
    "graphql": "14.3.1",
    "jest": "24.8.0",
    "ts-jest": "24.0.2",
    "typescript": "3.5.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.(ts|js)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
